{
  "compilerOptions": {
    "noImplicitAny": true,
    "module": "commonjs",
    "target": "ES2020",
    "jsx": "react",
    "allowJs": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "strict": true,
    "rootDirs": ["."],
    "baseUrl": "src",
    "paths": {
      "@components/*": ["'src/components'/*"],
      "@assets/*": ["./assets/*"]
    },
    "outDir": "./dist",
    "lib": ["ES2020", "DOM"],
    "typeRoots": ["types", "node_modules/@types"],
    "types": ["chrome"]
  },
  "watch": true,
  "include": ["src/**/*", "types/**/*"],
  "exclude": ["node_modules", "dist"]
}
