{
  "name": "Rapid Research",
  "description": "Add-on for seamless search between browsers",
  "version": "1.0.1",
  "manifest_version": 3,
  "background": {
    "service_worker": "/background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://www.google.com/search?*", "https://www.google.co.jp/search?*"],
      "js": ["/content.js"]
    }
  ],
  "permissions": ["storage", "activeTab", "tabs", "scripting"],
  "action": {
    "default_popup": "/index.html",
    "default_icon": {
      "32": "/src/assets/earth-32px.png",
      "48": "/src/assets/earth-48px.png"
    }
  },
  "icons": {
    "32": "/src/assets/earth-32px.png",
    "48": "/src/assets/earth-48px.png"
  },
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+1",
        "mac": "Command+Shift+1"
      }
    }
  }
}
